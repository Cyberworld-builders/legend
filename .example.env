# ===========================================
# CyberWorld Builders Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ------------------------------------------
# Stripe (Payment processing - not actively used)
# ------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key

# ------------------------------------------
# OpenAI (Required for chat widget)
# ------------------------------------------
OPENAI_API_KEY=your-openai-api-key

# ------------------------------------------
# Supabase (Database for leads)
# ------------------------------------------
# For local development with supabase CLI:
#   Run `supabase start` and copy values from `supabase status`
# For production:
#   Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ------------------------------------------
# n8n (Automation workflows)
# ------------------------------------------
# Local n8n webhook URL (for lead processing automation)
NEXT_PUBLIC_N8N_WEBHOOK_URL=http://localhost:5678/webhook/leads

# n8n Docker auth (for docker-compose.n8n.yml)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme
N8N_DB_PASSWORD=n8npassword

# ------------------------------------------
# Cloudflare Turnstile (Spam protection - optional)
# ------------------------------------------
# Get these from Cloudflare dashboard when ready to add captcha
# NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
# TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# ------------------------------------------
# Make.com (Legacy webhook - being replaced by n8n)
# ------------------------------------------
NEXT_PUBLIC_MAKE_COM_WEBHOOK_URL=https://hooks.make.com/webhooks/your-webhook-id
